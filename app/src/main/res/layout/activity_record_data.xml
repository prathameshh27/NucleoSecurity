<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/appBackground"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="REPORT"
        android:textColor="@color/textColorMedium"
        android:textSize="20dp"
        android:background="@color/textBackgroundDark"
        android:textStyle="bold"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridlayout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/resultTextView"
        android:elevation="2dp"
        android:rowCount="5"
        android:columnCount="2"
        >

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Diabetes"
            />

        <TextView
            android:id="@+id/diabetesRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Heart Rate"
            />

        <TextView
            android:id="@+id/heartRateRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Blood Pressure"
            />

        <TextView
            android:id="@+id/bloodPressureRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Body Mass Index"
            />

        <TextView
            android:id="@+id/BMIRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Patients Age"
            />

        <TextView
            android:id="@+id/ageRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <TextView
            style="@style/AppTheme.gridLayoutCol1"
            android:text="Stress / Anxiety"
            />

        <TextView
            android:id="@+id/stressRecordData"
            style="@style/AppTheme.gridLayoutCol2"
            />

        <!--<TextView-->
            <!--style="@style/AppTheme.gridLayoutCol1"-->
            <!--android:text="Meditation"-->
            <!--/>-->

        <!--<TextView-->
            <!--android:id="@+id/meditationRecordData"-->
            <!--style="@style/AppTheme.gridLayoutCol2"-->
            <!--/>-->

        <!--<TextView-->
            <!--style="@style/AppTheme.gridLayoutCol1"-->
            <!--android:text="Attention"-->
            <!--/>-->

        <!--<TextView-->
            <!--android:id="@+id/attentionRecordData"-->
            <!--style="@style/AppTheme.gridLayoutCol2"-->
            <!--/>-->

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/probabilityRecordData"
        android:layout_below="@id/gridlayout"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:elevation="2dp"
        android:text="'0%' chances of having a heart attack."
        android:textSize="15sp"
        android:background="@color/textBackgroundDark"
        />

</RelativeLayout>
