<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardElevation="1dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/recordCardView"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordName"
            android:drawableLeft="@drawable/ic_records"
            android:drawablePadding="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Record Name"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/openTimeDate"
            android:textSize="16dp"
            android:layout_below="@id/recordName"
            android:text="open"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/closeTimeDate"
            android:textSize="16dp"
            android:layout_below="@id/openTimeDate"
            android:text="close"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>